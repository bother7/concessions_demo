<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Start Time</th>
      <th>Name</th>
      <th>Current Quarter</th>
      <th>Food</th>
      <th>Drinks</th>
      <th>Snacks</th>
      <th>Alcohol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.date %></td>
        <td><%= game.start_time %></td>
        <td><%= game.name %></td>
        <td><%= game.current_period %></td>
        <td><%= game.food %></td>
        <td><%= game.drinks %></td>
        <td><%= game.snacks %></td>
        <td><%= game.alcohol %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

